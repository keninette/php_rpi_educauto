{# app/Resources/views/layout.backend.html.twig #}

<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <title>{% block title %}Educ'auto{% endblock %}</title>

        {% block stylesheets %}
            {# Common CSS #}
            <link rel="stylesheet" href="{{ asset(assetsPath~'/css/main.css') }}"/>
            <link rel="stylesheet" href="{{ asset(assetsPath~'/css/backend.css') }}"/>
            
            <!-- BootStrap HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
            <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
            <!--[if lt IE 9]>
              <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
              <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
            <![endif]-->
        {% endblock %}
    </head>

    <body>
        <div class="container-fluid fill">
            <div class="row fill">
                <nav class="navbar col-lg-2 col-md-3 col-sm-3 fill">
                     <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="fa fa-bars"></span>
                        </button>
                        <a class="navbar-brand" href="#">Educ'Auto</a>
                    </div>
                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse navbar-ex1-collapse">
                        <ul class="nav navbar-nav">
                            <li class="active"><a href="#">Link</a></li>
                            <li><a href="#">Link</a></li>
                            <li><a href="#">Link</a></li>
                            <li><a href="#">Link</a></li>
                            <li><a href="#">Link</a></li>
                        </li>
                      </ul>
                    </div>
                </nav>
                    {#{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                        Connecté en tant que {{ app.user.username }}
                        -
                        <a href="{{ path('fos_user_profile_edit') }}">Mon compte</a>
                        <a href="{{ path('fos_user_security_logout') }}">Déconnexion</a>
                    {% endif %}#}

                <div id="main" class="col-lg-10 col-md-9 col-sm-9 fill">
                    {% block body %}

                    {% endblock %}
                </div>
            </div>
        </div>
       
    </body>
    {% block scripts %}
        <script src="https://code.jquery.com/jquery-1.11.2.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>
    {% endblock%}
</html>
    